{
  "console_title_template": "{{ .Folder }}",
  "version": 3,
  "final_space": true,
  "palette": {
    "grey": "#6c6c6c"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": false,
      "segments": [
        {
          "template": "{{ .Path }}",
          "foreground": "blue",
          "background": "transparent",
          "type": "path",
          "style": "plain",
          "properties": {
            "cache_duration": "none",
            "left_format": "<b>%s</b>",
            "right_format": "<b>%s</b>",
            "style": "full"
          }
        },
        {
          "template": " {{ (abbrev 32 .HEAD) }}{{ if or (.Working.Changed) (.Staging.Changed) }}*{{ end }} <cyan>{{ if gt .Behind 0 }}↓{{ end }}{{ if gt .Ahead 0 }}↑{{ end }}</>",
          "foreground": "p:grey",
          "background": "transparent",
          "type": "git",
          "style": "plain",
          "properties": {
            "branch_icon": "",
            "cache_duration": "none",
            "commit_icon": "@",
            "fetch_status": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "newline": false,
      "segments": [
        {
          "template": " 󰎙 {{ .Full }} ",
          "foreground": "#6CA35E",
          "background": "transparent",
          "type": "node",
          "style": "plain",
          "properties": {
            "cache_duration": "none"
          }
        },
        {
          "template": "  {{ .Full }} ",
          "foreground": "#3C82F6",
          "background": "transparent",
          "type": "bun",
          "style": "plain",
          "properties": {
            "cache_duration": "none"
          }
        },
        {
          "template": "  {{ .Full }} ",
          // "template": " 󰟓 {{ .Full }} ",
          "foreground": "#7FD5EA",
          "background": "transparent",
          "type": "go",
          "style": "plain",
          "properties": {
            "cache_duration": "none"
          }
        },
        {
          "template": "  {{ .Full }} ",
          "foreground": "#99908a",
          "background": "transparent",
          "type": "rust",
          "style": "plain",
          "properties": {
            "cache_duration": "none"
          }
        },
        {
          "template": "  {{ .Full }} ",
          "foreground": "white",
          "background": "transparent",
          "type": "lua",
          "style": "plain",
          "properties": {
            "cache_duration": "none"
          }
        },
        {
          "template": "{{ .FormattedMs }}",
          "foreground": "yellow",
          "background": "transparent",
          "type": "executiontime",
          "style": "plain",
          "properties": {
            "cache_duration": "none",
            "threshold": 5000
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "template": "❯",
          "foreground": "magenta",
          "background": "transparent",
          "type": "text",
          "style": "plain",
          "properties": {
            "cache_duration": "none"
          }
        }
      ]
    }
  ]
}
