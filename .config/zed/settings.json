{
  "telemetry": {
    "diagnostics": false
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "vim_mode": false,
  "tab_size": 2,
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet"
    },
    "version": "2"
  },
  "ui_font_size": 14,
  "buffer_font_size": 13,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "ui_font_family": "JetBrainsMono Nerd Font",
  "relative_line_numbers": true,
  "theme": {
    "mode": "dark",
    "light": "Tokyo Night Light",
    "dark": "Tokyo Night"
  },
  "buffer_font_features": {
    "liga": false,
    "calt": false
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": [
          "class",
          "className",
          "cva",
          "cn"
        ]
      }
    },
    "biome": {
      "settings": {
        "require_config_file": true
      }
    }
  },
  "formatter": "language_server",
  "languages": {
    "Go": {
      "show_edit_predictions": false
    },
    "JavaScript": {
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "TypeScript": {
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "JSX": {
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "TSX": {
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "JSON": {
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "JSONC": {
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "CSS": {
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "GraphQL": {
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
  },
  "terminal": {
    "working_directory": "current_project_directory"
  },
  "auto_install_extensions": {
    "basher": true,
    "biome": true,
    "csv": true,
    "docker-compose": true,
    "dockerfile": true,
    "env": true,
    "git-firefly": true,
    "html": true,
    "log": true,
    "lua": true,
    "proto": true,
    "pylsp": true,
    "sql": true,
    "tmux": true,
    "tokyo-night": true,
    "toml": true,
    "typos": true
  }
}
